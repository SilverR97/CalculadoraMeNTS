<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragEnf"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688"
    tools:context=".FragEnfermedad">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/roboto_bold"
        android:text="Factores asociados con la enfermedad"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/TextTotalFg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Total: "
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="63dp"
                android:layout_height="58dp"
                android:layout_gravity="right"
                android:src="@drawable/enfermedad" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto"
                android:text="Efectividad tratamiento no quirurgico"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup
                android:id="@+id/RG_ETNQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/textView10"
                tools:layout_editor_absoluteX="52dp">

                <RadioButton
                    android:id="@+id/rbETNQ1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No disponible"
                    />

                <RadioButton
                    android:id="@+id/rbETNQ2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menor al 40% de efectividad." />

                <RadioButton
                    android:id="@+id/rbETNQ3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entre el 40% y el 60% de efectividad." />

                <RadioButton
                    android:id="@+id/rbETNQ4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entre el 61% y el 95% de efectividad." />

                <RadioButton
                    android:id="@+id/rbETNQ5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Igual de efectivo." />

            </RadioGroup>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Riesgo de exposición tratamiento no quirurgico"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <RadioGroup
                android:id="@+id/RG_RETNQ"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/rbRETnQ1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Significativamente peor/ na"
                    />

                <RadioButton
                    android:id="@+id/rbRETnQ2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Un poco peor" />

                <RadioButton
                    android:id="@+id/rbRETnQ3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Equivalenter" />

                <RadioButton
                    android:id="@+id/rbRETnQ4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Un poco mejor" />

                <RadioButton
                    android:id="@+id/rbRETnQ5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Significativamente mejor" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Imapcto en evolución de la enfermedad tras 2 semanas de postergación"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <RadioGroup
                android:id="@+id/RG_IE2SEM"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/rbIE2Sem1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Significativamente peor"
                    />

                <RadioButton
                    android:id="@+id/rbIE2Sem2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peor" />

                <RadioButton
                    android:id="@+id/rbIE2Sem3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moderadamente peor" />

                <RadioButton
                    android:id="@+id/rbIE2Sem4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Un poco peor" />

                <RadioButton
                    android:id="@+id/rbIE2Sem5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No es peor" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Impacto en la dificultad de la cirugía tras 2 semanas de postergación."
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <RadioGroup
                android:id="@+id/RG_IDC2SEM"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/rbIDC2Sem1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Significativamente peor"
                    />

                <RadioButton
                    android:id="@+id/rbIDC2Sem2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peor" />

                <RadioButton
                    android:id="@+id/rbIDC2Sem3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moderadamente peor" />

                <RadioButton
                    android:id="@+id/rbIDC2Sem4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Un poco peor" />

                <RadioButton
                    android:id="@+id/rbIDC2Sem5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No es peor" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Impacto en evolución de la enfermedad tras 6 semanas de postergación."
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <RadioGroup
                android:id="@+id/RG_IE6SEM"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/rbIE6Sem1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Significativamente peor" />

                <RadioButton
                    android:id="@+id/rbIE6Sem2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peor" />

                <RadioButton
                    android:id="@+id/rbIE6Sem3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moderadamente peor" />

                <RadioButton
                    android:id="@+id/rbIE6Sem4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Un poco peor" />

                <RadioButton
                    android:id="@+id/rbIE6Sem5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No es peor" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Impacto en la dificultad de la cirugía tras 6 semanas de postergación."
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <RadioGroup
                android:id="@+id/RG_IDC6SEM"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/rbIDC6Sem1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Significativamente peor"
                    />

                <RadioButton
                    android:id="@+id/rbIDC6Sem2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peor" />

                <RadioButton
                    android:id="@+id/rbIDC6Sem3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moderadamente peor" />

                <RadioButton
                    android:id="@+id/rbIDC6Sem4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Un poco peor" />

                <RadioButton
                    android:id="@+id/rbIDC6Sem5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No es peor" />
            </RadioGroup>

            <Button
                android:id="@+id/btnSigProced"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Siguiente" />


        </LinearLayout>
    </ScrollView>

</FrameLayout>